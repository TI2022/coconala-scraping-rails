<% provide(:title, "トップ") %>
<div class="separator"></div>
<% unless logged_in? %>
  <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    <div class="mt-4">
      <%= f.hidden_field :email, :value => "admin@email.com" %>
      <%= f.hidden_field :password, :value => "password" %>
      <%= f.hidden_field :remember_me, :value => "0" %>
      <%= f.submit "ゲストログイン", class: "btn btn-success btn-login" %>
    </div>
  <% end %>
<% end %>
