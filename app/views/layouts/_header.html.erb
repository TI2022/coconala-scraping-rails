<header class='header'>
  <%= link_to "Scraping App", root_path, id: "header-logo" %>

  <ul class="header-menu">
    
    <% if logged_in? %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          スクレイピング<b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "amazon情報取得", amazon_scrapings_path %></li>
          <div class="divider"></div>
        </ul>
      </li>
    
    
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          ユーザー情報 <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "ユーザー情報", current_user %></li>
          <% if current_user.admin? %>
            <li><%= link_to "ユーザー登録", signup_path %></li>
            <li><%= link_to "ユーザー情報変更", edit_user_path(current_user) %></li>
            <li><%= link_to "全てのユーザー", users_path %></li>
          <% end %>
          <div class="divider"></div>
          <li>
            <%= link_to "ログアウト", logout_path, method: :delete %>
          </li>
        </ul>
      </li>
    <% end %>
    <% unless logged_in? %>
      <li><%= link_to "ログイン", login_path %></li>
    <% end %>
  </ul>
  

  <div id="navArea">
    <div class="nav">
      <div class="inner">
        <ul>
          <li><%= link_to "ホーム", root_path %></li>

          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                スクレイピング<b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "スクレイピング", scrapings_path %></li>
                <div class="divider"></div>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                ユーザー情報 <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "ユーザー情報", current_user %></li>
                <% if current_user.admin? %>
                  <li><%= link_to "ユーザー登録", signup_path %></li>
                  <li><%= link_to "ユーザー情報変更", edit_user_path(current_user) %></li>
                  <li><%= link_to "全てのユーザー", users_path %></li>
                <% end %>
                <div class="divider"></div>
                <li>
                  <%= link_to "ログアウト", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
            <li><%= link_to "CSV出力", csv_scrapings_path %></li>
          <% end %>
          <% unless logged_in? %>
            <li><%= link_to "ログイン", login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="toggle_btn">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <div id="mask"></div>
  </div>

</header>
